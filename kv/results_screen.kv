#: import const src.constants

Results:
    name: "results_screen"
    on_pre_enter: 
        multiplication_result_label.text = root.get_percentage(app.db, app.const.CATEGORIES[0])
        fraction_result_label.text = root.get_percentage(app.db, app.const.CATEGORIES[1])
        roman_result_label.text = root.get_percentage(app.db, app.const.CATEGORIES[2])
        percent_result_label.text = root.get_percentage(app.db, app.const.CATEGORIES[3])
    on_enter: nav.switch_tab("results_tab")
    on_leave: app.previous_screen = self.name

    MDBoxLayout:
        orientation: "vertical"
        
        MDBoxLayout:
            orientation: "vertical"
            # Page header.    
            MDLabel:
                id: page_label
                text: "Twoje wyniki"
                font_style: "H4"
                halign: "center"
                adaptative_height: False
    
            # Total results card.
            MDCard:
                id: results_card
                orientation: "vertical"
                halign: "center"
                size_hint: None, None
                size: "300dp", "400dp"
                pos_hint: {"center_x": .5, "center_y": .5}
                padding: "20px"
                MDBoxLayout:
                    id: results_box
                    orientation: "vertical"
                    # Multiplication.
                    MDBoxLayout:
                        orientation: "horizontal"
                        MDLabel:
                            text: "Tabliczka mnożenia"
                            theme_text_color: "Secondary"
                            halign: "center"
                        MDLabel:
                            id: multiplication_result_label
                            text: ""
                            theme_text_color: "Secondary"
                            halign: "center"
                    # Fractions.
                    MDBoxLayout:
                        orientation: "horizontal"
                        spacing: "10dp"
                        MDLabel:
                            text: "Ułamki"
                            theme_text_color: "Secondary"
                            halign: "center"
                        MDLabel:
                            id: fraction_result_label
                            text: ""
                            theme_text_color: "Secondary"
                            halign: "center"
                    # Percents.
                    MDBoxLayout:
                        orientation: "horizontal"
                        spacing: "10dp"
                        MDLabel:
                            text: "Procenty"
                            theme_text_color: "Secondary"
                            halign: "center"
                        MDLabel:
                            id: percent_result_label
                            text: ""
                            theme_text_color: "Secondary"
                            halign: "center"
                    # Roman numbers.
                    MDBoxLayout:
                        orientation: "horizontal"
                        spacing: "10dp"
                        MDLabel:
                            text: "Cyfry rzymskie"
                            theme_text_color: "Secondary"
                            halign: "center"
                        MDLabel:
                            id: roman_result_label
                            text: ""
                            theme_text_color: "Secondary"
                            halign: "center"

            # Send sms.
            MDBoxLayout:
                orientation: "vertical"
                padding: "30px"
                MDFillRoundFlatButton:
                    id: send_button
                    text: "wyślij wynik"
                    theme_text_color: "Custom"
                    text_color: const.BLACK
                    font_size: "18sp"
                    padding: "20px"
                    pos_hint: {"center_x": .5, "center_y": .5}
                    on_press: root.show_phone_book(app.db)
               
        # Bottom NAV.
        MDBottomNavigation:     
            id: nav      
            size_hint_y: .2
            panel_color: const.PINK
            text_color_normal: const.GRAY
            text_color_active: const.RED
            # Go back to main screen.
            MDBottomNavigationItem: 
                name: "menu_tab"
                text: "Menu"
                icon: "backup-restore"
                on_tab_press:app.screen_manager.current = "main_screen"
            # Current screen.
            MDBottomNavigationItem: 
                name: "results_tab"
                text: "Twój wynik"
                text_color: const.BLACK
                icon: "account"
            # Close the app.
            MDBottomNavigationItem: 
                name: "quit_tab"
                text: "Koniec"
                icon: "exit-run"
                on_tab_press:
                    Factory.Ui_Helpers().custom_popup( \
                    t_txt="Potwierdź", \
                    c_txt="Wyniki zostaną utracone.\nMoże najpierw je wyślij.\n\nCzy na pewno wyjść z aplikacji?", \
                    foo=app, \
                    exit_popup=True, \
                    go_main_screen=False, \
                    confirm=False)